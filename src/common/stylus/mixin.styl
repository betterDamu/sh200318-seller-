//实现一物理像素的下边框
one-px($color)
  position relative
  &:after
    position absolute
    bottom 0
    display block
    content ""
    width 100%
    height 1px
    background $color
    @media screen and (-webkit-device-pixel-ratio:2)
      transform scaleY(.5)
    @media screen and (-webkit-device-pixel-ratio:3)
      transform scaleY(.333333333)